                <p class="grey-text text-lighten-4">Anas Alim Khan</p>
                <p class="grey-text text-lighten-4">Anvith Shetty</p>
                <p class="grey-text text-lighten-4">Avinash Shenoy</p>				
				
              </div>
              <div class="col l4 offset-l2 s12">
              </div>
            </div>
          </div>
          <div class="footer-copyright">
            <div class="container">
            &copy; 2017 Copyright
            </div>
          </div>
        </footer>
		<script>
			<% if(medHist != null) { %>
				disease = <%- JSON.stringify(medHist.disease) %>;
				prescribed = <%- JSON.stringify(medHist.prescribed) %>;
				prescribedBy = <%- JSON.stringify(medHist.prescribedBy) %>;
			<% } %>
			<% if(allergies != null) { %>
				allergy = <%- JSON.stringify(allergies.allergy) %>;
			<% } %>
			<% if(insurancePolicy != null) { %>
				insurance = <%- JSON.stringify(insurancePolicy.insurancePolicy) %>;
				premium = <%- JSON.stringify(insurancePolicy.premium) %>;
				coverage = <%- JSON.stringify(insurancePolicy.coverage) %>;
			<% } %>
		</script>

</body>

</html>